<body>
  <div class="container">

    <div class="card" id="formulario-pergunta">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>

      <div class="card-body">

        <form method="post" action="/salvarpergunta">
          <label for="titulo">Título</label>

          <input type="text" placeholder="Título" class="form-control" id="titulo" name="titulo">
          <br>

          <label for="descricao">Descrição</label>

          <textarea placeholder="Descreva sua pergunta aqui" class="form-control" id="descricao" name="descricao"></textarea>
          <br>

          <button class="btn btn-primary">Perguntar</button>
        </form>

      </div>
    </div>
  </div>

</body>


